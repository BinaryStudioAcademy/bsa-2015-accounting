#administration-view
	input(type='text' placeholder='filter users')
	table.table-hover
		thead
			tr
				th(colspan='2')
					b User
				th(colspan='4')
					b Permissions
				th(rowspan='2')
					b Role
				th(colspan='3')
					b Personal budget
			tr
				th
					b Login
				th
					b Name
				th
					b Category
				th
					b Read
				th
					b Post
				th
					b Admin
				th
					b Left
				th
					b Used
				th
					b Currency
		tbody
			tr(ng-repeat='user in admCtrl.users')
				td {{user.login}}
				td {{user.name}}
				td
					select
						option(ng-repeat='category in admCtrl.categories' value='{{category.name}}') {{category.name}}
				td
					input(type='checkbox')
				td
					input(type='checkbox')
				td
					input(type='checkbox')
				td
					select
						option(value='manager') manager
						option(value='owner') owner
				td 800.00
				td 200.00
				td
					select
						option(value='UAH') UAH
						option(value='USD') USD