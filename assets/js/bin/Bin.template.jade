#bin-view
	.alert.alert-warning(ng-show="currentUser.max_level < 2")
		i.fa.fa-exclamation-triangle.fa-2x
		h2 &nbsp;This section available only for users with administration rights
	#expenses-section(ng-hide="currentUser.max_level < 2")
		table.table-hover.fixed
			colgroup
				col.table-toggle.responsive-hide
				col.table-date-header.responsive-hide
				col.table-category
				col.table-expense
				col.table-cost
				col.table-carrency
				col.table-sub.responsive-hide
				col.table-addBy
				col.table-deletedBy.responsive-hide
				col.table-description-header
			thead
				tr
					th(colspan="10") Deleted expenses
				tr
					th.responsive-hide
						button.fa.fa-list(ng-click='binCtrl.toggleAllExpenses()' ng-show='binCtrl.check')
						button.fa.fa-th(ng-click='binCtrl.toggleAllExpenses()' ng-hide='binCtrl.check')
					th.responsive-hide
						| Time
					th
						| Category
					th#header-sub.responsive-hide
						| Subcategory
					th
						| Name
					th
						| Amount
					th
						| $ / &#8372;
					th
						| Added by
					th.responsive-hide
						| Deleted by
					th
						i.fa.fa-cog
		#main
			table.table-hover.fixed(ng-hide="sortType")
				colgroup
					col.table-date.responsive-hide
					col.table-category
					col.table-expense
					col.table-cost
					col.table-carrency
					col.table-sub.responsive-hide
					col.table-addBy
					col.table-deletedBy.responsive-hide
					col.table-description
				tbody(ng-repeat="date in binCtrl.dates | limitTo: binCtrl.expensesLimit", ng-hide="!(filteredData = (binCtrl.getExpensesByDate(date) " +
				"| filter: {name: nameModelFilter, category: {name: categoryModelFilter.name}, " +
				"subcategory: {name: subcategoryModelFilter.name}, creator: {name: authorModelFilter}} " +
				"| dateRange:startDateFilter:endDateFilter)).length")
					tr.date-hilight
						td
							i.fa.fa-chevron-right(ng-click="binCtrl.toggleCustom($index)" ng-hide="!binCtrl.hiddenList[$index]" )
							i.fa.fa-chevron-down(ng-click="binCtrl.toggleCustom($index)" ng-show="!binCtrl.hiddenList[$index]")
						td(colspan='8')

							| {{ date | date: 'fullDate' }}
					tr(ng-repeat="expense in filteredData", ng-init='binCtrl.pageTitleEquals(filteredData)', ng-hide="binCtrl.hiddenList[$parent.$index]" )
						td.responsive-hide
							| {{ expense.time | date:'HH:mm' }}
						td
							| {{ expense.category.name }}
						td.responsive-hide
							| {{ expense.subcategory.name }}
						td
							| {{ expense.name  || 'empty' }}
						td
							| {{ expense.price  || 'empty' }}
						td
							| {{ expense.currency }}
						td
							| {{ expense.creator.name }}
						td.responsive-hide
							| {{ expense.deletedBy.name }}
						td
							button.btn.btn-xs.btn-success(ng-click='binCtrl.restoreExpense(expense.id, expense.name)') restore
							.btn-group(dropdown='')
								span.dropdown-menu.dropdown-menu-right(aria-labelledby='split-button') {{ expense.description }}
				tbody(ng-show="binCtrl.isLoadMore()")
					tr
						td
						td(colspan='8')
							a(ng-click="binCtrl.loadExpenses()")
								| load more expenses&nbsp;
								i.fa.fa-plus
				tbody(ng-if="binCtrl.deletedExpenses == 0")
					tr
						td(colspan='8')
							| no deleted expenses
	#budgets-section(ng-hide="currentUser.max_level < 3")
		b.responsive-hide Year: 
		select.form-control(ng-model='binCtrl.year' ng-change='binCtrl.updateYear()')
			option(ng-repeat='year in binCtrl.years', value='{{year}}') {{year}}
		table.table-hover
			thead
				tr
					th(colspan="5")
						b Full categories
				tr
					th
						b Budget
					th
						b Category
					th.responsive-hide
						b Created by
					th.responsive-hide
						b Deleted by
					th
						b Restore
			tbody
				tr(ng-repeat="budget in binCtrl.deletedStuff.budgets")
					td {{budget.category.budget | currency}}
					td {{budget.category.name}}
					td.responsive-hide {{budget.creator.name}}
					td.responsive-hide {{budget.deletedBy.name}}
					td
						button.btn.btn-xs.btn-success(ng-click='binCtrl.restoreMe(budget.id, budget.category.id)') restore
				tr(ng-show="binCtrl.deletedStuff.budgets.length == 0")
					td(colspan="5") no deleted budgets in year {{binCtrl.year}}
			thead
				tr
					th(colspan="5")
						b Subcategories from existing categories
				tr
					th
						b Budget
					th.responsive-hide
						b Category
					th
						b Subcategory
					th.responsive-hide
						b Deleted by
					th
						b Restore
			tbody
				tr(ng-repeat="subcat in binCtrl.deletedStuff.subcategories")
					td {{subcat.budget | currency}}
					td.responsive-hide {{subcat.categoryName}}
					td {{subcat.name}}
					td.responsive-hide {{subcat.deletedBy.name}}
					td
						button.btn.btn-xs.btn-success(ng-click='binCtrl.restoreMe(subcat.budgetId, subcat.categoryId, subcat.id, subcat.budget)') restore
				tr(ng-show="binCtrl.deletedStuff.subcategories.length == 0")
					td(colspan="5") no deleted subcategories in year {{binCtrl.year}}