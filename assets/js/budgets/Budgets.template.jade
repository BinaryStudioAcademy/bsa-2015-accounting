#budgets-view(ng-controller='BudgetsController as budCtrl')
	form
		input(type='submit', value='save changes')
		input(type='button', value='discard changes')
	table
		col(width='40')
		tr
			th(colspan='2') Category
			th Budget
			th Used
		tr
			td(colspan='2')
				select
					option(ng-repeat='year in budCtrl.years', value='volvo') Volvo
			td {Budget}
			td {Used}
		tr(ng-repeat='category in budCtrl.categories')
			th.toggle-subcategory-btn caret
			th {{category.name}}
			th {{category.budget}}
			th {{category.used}}
		tr(ng-repeat='subcategory in category.subcategories')
			td hide me
			td {{subcategory.name}}
			td {{subcategory.budget}}
			td {{subcategory.used}}
		tr
			td hide me
			th(colspan='3') add new sub cat
		tr
			th(colspan='4') add new cat
