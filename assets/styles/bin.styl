#bin-view
	margin-top 50px
	#expenses-section
		table
			width 100%
		td, th
			text-align center
			border 1px solid #ddd
			padding 3px
			vertical-align middle
			font-size 14px

		th
			background #f2f2f2
			font-weight 700
			span
				cursor pointer
		.table-date,
		.table-expense,
		.table-cost,
		.table-carrency,
		.table-category,
		.table-sub,
		.table-addBy,
		.table-deletedBy
			width 100px
		.table-description
			width 86px
		.table-description-header
			width 100px
		.table-date-header
			width 70px
		.table-toggle
			width 30px
		.btn
			margin-left: 4px;
		.fa-info
			padding 0 8px
		.buttons, .form-inline
			display inline-block
		.date-hilight
			font-weight bold
			background #EAE9FF
		.fa-th, .fa-list 
			border none 
			padding 4px
			border-radius 3px;
		#header-sub
			width 101px
		#main
			overflow-y auto
			max-height 300px
			margin-bottom 10px
		i, a
			cursor pointer
	#budgets-section
		select
			width initial !important;
			display initial !important;
		table
			margin-top 10px
			width 100%
			td, th
				text-align center
				border 1px solid #ddd
				padding 10px
				vertical-align middle
				font-size 14px
			th
				background #f2f2f2
				font-weight normal
	@media screen and (max-width: 479px)
		#budgets-section
			.responsive-hide
				display none
			select
				width 100% !important