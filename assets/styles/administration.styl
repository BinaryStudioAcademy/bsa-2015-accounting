#administration-view
	margin-top 5px
	.controls
		select, input
			width initial !important;
			display initial !important;
			margin 10px
			margin-left 0
	table
		width 100%
		td, th
			text-align center
			border 1px solid #ddd
			padding 10px
			vertical-align middle
			font-size 14px
		th
			background #f2f2f2
			font-weight normal
		button
			margin-left 5px
	.bad
		color red
	.good
		color green
	.this-is-me
		background #f2f2f2
		font-weight bold
	@media screen and (max-width: 570px)
		.controls
			input
				width 100% !important
	@media screen and (max-width: 479px)
		.responsive-hide
			display none
		.controls
			select
				width 100% !important