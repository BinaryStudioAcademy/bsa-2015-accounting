#chart-view
	#charts
		margin-right 20px
	#filters
		width 300px
		float left
		margin-left 100px
		margin-bottom 20px
	h3
		text-align center
	#table
		td.current
			background #d2eef4
		th.current
			background #a0d0da
		width 80%
		margin auto
		margin-bottom 50px
		background #FAFAFA
		td, th
			text-align center
			border 1px solid #ddd
			padding 10px
			vertical-align middle
			font-size 14px
			border-collapse collapse
		th
			background #EBEDE7
			font-weight normal
	#toggle-filters
		width 100%
		display none
		margin-bottom 10px
	.showFilters
		display initial !important

	@media screen and (max-width: 680px)
		#toggle-filters
			display block
		#filters
			width 100%
			float none
			margin 0
			display none

