#chart-view
	.chart-Topcontainer
		width 60%
		margin 20px auto
		background #EBEDE7
		border-radius 20px
		margin 50px auto
		padding 0 22px
		height 340px

	.chart-leftBlock
		float left
		width 45%
		margin 3% 0
		padding 3% 0
		
	.chart-rightBlock
		float right
		width 45%

		padding 3% 0
	li
		text-decoration none
		list-style none
	
	.chart-filterList
		li
			margin-top 10px
	.chartsBlock
		width 70%
		margin auto
	
	.chart-butSum
		margin 10px 0
	
	table
		width 80%
		margin auto
		background #FAFAFA
		td, th
			text-align center
			border 1px solid #ddd
			padding 2px
			vertical-align middle
			font-size 14px
			border-collapse collapse
		th
			background #EBEDE7
			font-weight normal
	.innerTable
		width 100%
	.togTable
		margin 0 50px 50px 50px
	.btn-info
		margin-left 40px