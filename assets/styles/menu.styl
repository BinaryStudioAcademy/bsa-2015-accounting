body
  min-width 320px
  max-width 1920px

header
  line-height 50px
  background #89b1b1

nav
  margin-top 50px
  width 200px
  float left
  position absolute
  //height 100%
  top 0
  bottom 0
  ul
    height 100%

main
  max-width 1920px
  margin-left 200px
  //margin-top 50px
  //float left
  padding 5px
  //position absolute
  //top 0
  //right 0

#page-name
  text-align center
  font-size 30px
  color white
  padding-right 125px
  margin-left 45px

#user-info
  font-size 15px
  font-weight 600
  color white
  position absolute
  top 0
  right 10px
  cursor pointer

#user-logo
  border 1px solid white

#menu-btn
  color white
  font-size 29px
  padding 0 10px
  position absolute
  top 10px
  left 0
  cursor pointer
  display none

@media screen and (max-width: 1023px)
  main
    margin-left 0

  nav
    width 100%
    display none
    margin-top 0
    float none
    top 0
    border-bottom 1px solid #ddd
    position relative

  #menu-btn
    display block

  .no-tablet-view
    display none

@media screen and (max-width: 480px)
  .no-mobile-view
    display none

#user-administration
  position absolute
  width 200px
  top 180px
  padding 12px

#user-administration
  input
    padding-left 5px
    border 1px solid #ddd

#users
  list-style none
  padding 0
  margin 0 -10px
  li
    width 204px
    border-bottom 1px solid #ddd
    padding 5px
    cursor pointer
    padding 10px 20px
    margin 0 -7px

.active
  //background #ddd

.icon
  position absolute
  top 17px
  right 17px
  color #333

.item
  margin 5px 13px
  &::after
    content ""
    display block
    clear both

.subitem
  float left

.name
  width 90px

.wrapper
  border-bottom 1px solid #ddd
  background #f2f2f2
  margin-right -1px
  padding-top 3px

.m, .a
  color #333
  background #ccc
  width 20px
  border-radius 50%
  text-align center
  //border 1px solid #333
  cursor pointer

input[type="checkbox"]
  cursor pointer

.m
  margin-left 3px

.a
  margin-left 19px

.man
  margin-left 6px !important

.adm
  margin-left 27px !important

.hidee
  visibility hidden
