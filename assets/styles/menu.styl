#menu-view
	body
		min-width 320px
		max-width 1920px
	
	header
		line-height 50px
		background #1E88E5
		position fixed
		width 100%
		z-index 9999
	
	nav
		margin-top 50px
		width 200px
		float left
		position fixed
		//height 100%
		top 0
		bottom 0
		ul
			height 100%
	
	main
		max-width 1920px
		margin-left 200px
		//margin-top 50px
		//float left
		padding 5px
		//position absolute
		//top 0
		//right 0
	
	#page-name
		text-align center
		font-size 30px
		color white
		font-weight 700
		padding-right 125px
		margin-left 45px
	
	#user-info
		font-size 15px
		font-weight 600
		color white
		position absolute
		top 0
		right 10px
		cursor pointer
		a
			color white
			text-decoration none
	#menu-btn
		color white
		font-size 29px
		padding 0 10px
		position absolute
		top 10px
		left 0
		cursor pointer
		display none

	.nav-tabs
		& > li
			float none

	.nav-tabs
		& > li
			& > a ,.nav-tabs 
				border none

	.nav>li>a:focus, .nav>li>a:hover
		background -webkit-linear-gradient(left, #e2e2e2 0%,#fefefe 100%);

	.nav-tabs 
		border none
	@media screen and (max-width: 1235px)
		main
			margin-left 0
		.menu-active
			display none
		nav
			width 100%
			margin-top 0
			float none
			top 0
			border-bottom 1px solid #ddd
			position relative
			top 50px
		ul
			display inline-flex
		#menu-btn
			display block

		.no-tablet-view
			display none
	
	@media screen and (max-width: 480px)
		.no-mobile-view
			display none
	
	#user-administration
		position fixed
		width 200px
		top 180px
		padding 12px
	
	#user-administration
		input
			padding-left 5px
			border 1px solid #ddd
	
	#users
		list-style none
		padding 0
		margin 0 -10px
		li
			width 204px
			border-bottom 1px solid #ddd
			padding 5px
			cursor pointer
			padding 10px 20px
			margin 0 -7px
	
	.active-tab
		background -webkit-linear-gradient(left, #e2e2e2 0%,#fefefe 100%)
	
	.icon
		position absolute
		top 17px
		right 17px
		color #333
	
	.item
		margin 5px 13px
		&::after
			content ""
			display block
			clear both
	
	.subitem
		float left
	
	.name
		width 90px
	
	.wrapper
		border-bottom 1px solid #ddd
		background #f2f2f2
		margin-right -1px
		padding-top 3px
	
	.m, .a
		color #333
		background #ccc
		width 20px
		border-radius 50%
		text-align center
		//border 1px solid #333
		cursor pointer
	
	input[type="checkbox"]
		cursor pointer
	
	.m
		margin-left 3px
	
	.a
		margin-left 19px
	
	.man
		margin-left 6px !important
	
	.adm
		margin-left 27px !important
	
	.hidee
		visibility hidden
	.nav-tabs
		& > li
			float none
