#budgets-view
	table
		width 100%
		td, th
			text-align center
			border 1px solid #ddd
			padding 10px
			vertical-align middle
			line-height 25px
			font-size 14px
		th
			background #f2f2f2
			font-weight normal
	.hide-me
		visibility hidden
		input
			&[type="submit"]
				margin-right 0
	button
		&:first-child
			margin-right 10px
	.review, a
		cursor pointer
		width 117px
	select
		padding 10px
		border-radius 5px
	.editCanges
		float right
		margin 10px
	th
		span
			cursor pointer
	.status-good
		color green
	.status-bad
		color: red
