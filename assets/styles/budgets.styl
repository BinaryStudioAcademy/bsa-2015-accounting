#container
  padding 10px

#planning-table td, #planning-table th
  text-align center
  border solid 1px #ddd
  padding 10px

#planning-table th, .new-cat
  background #f2f2f2
  font-weight normal

#planning-table
  width 100%
  tr
    &:nth-of-type(1)
      th
        font-weight bold
      & > th
        &:nth-of-type(2)
          width 100px

#planning-table tr:nth-of-type(4) td:nth-of-type(1),
#planning-table tr:nth-of-type(5) td:nth-of-type(1),
#planning-table tr:nth-of-type(6) td:nth-of-type(1),
#planning-table tr:nth-of-type(8) td:nth-of-type(1),
#planning-table tr:nth-of-type(9) td:nth-of-type(1),
#planning-table tr:nth-of-type(10) td:nth-of-type(1)
  visibility hidden

.status-good
  color green

.status-bad
  color red

.status-neutral
  color black

.expand-btn-hr, .expand-btn-marketing, a
  cursor pointer

.hr, .marketing
  background white !important

#second
  top 380px
  left 10px

#third
  top 380px
  left 340px

.year, .del-btn, .add-new
  //width 100%
  display block
  margin auto

.category, input, button
  //width 48%
  display block
  box-sizing border-box
  float left

select, input, button
  padding 10px
  border-radius 3px
  border solid 1px #ddd
  margin-bottom 10px

select
  &:disabled
    background #f2f2f2

button
  color white
  font-size 1.2em
  font-weight 700
  border none
  &.safe
    background #337ab7
    float right
    margin-right 10px
  &.danger
    background #c9302c
    float right

.margin-fix
  margin-left 10px

#controls
  display none
  width 100%
  margin-bottom 10px
  padding 10px
  text-align center
  border solid 1px #ddd
  border-radius 3px

.left
  text-align left !important
  position relative
  &:hover
    & > .del-cat-btn
      display block

.del-cat-btn
  color #dd6060
  position absolute
  top 12px
  right 12px
  cursor pointer
  display none

@media screen and (max-width: 1023px)
  aside
		display none

  #content
    margin 0
    padding 0

  #controls
    display block

@media screen and (max-width: 479px)
  .mobile-hide
    display none

@media screen and (max-width: 419px)
  #planning-table tr > td:nth-of-type(4),
  #planning-table tr > th:nth-of-type(4),
  #planning-table tr:nth-of-type(1) > th:nth-of-type(3),
  #planning-table tr:nth-of-type(8) > th:nth-of-type(3)
    display none

  #planning-table tr:nth-of-type(1) > th:nth-of-type(2)
    width 100px
