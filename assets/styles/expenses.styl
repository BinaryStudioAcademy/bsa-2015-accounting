#expenses-view
	margin-top 50px
	#rightBlock
		position absolute
		right 10px
		width 20%
	#leftBlock
		width 71%
		float left
		margin-left 3%
		height
		
	.btnAdd
		color white
		font-size 1.2em
		background-color #009688
		padding 9px 5px
		border none
		width 100%
		border-radius 3px
	.exchange
		text-align center
		color #222222
		padding 12px 10px
	.exchange, .expense-form
		width 100%
		border solid 1px #ddd
		padding 10px
		margin-bottom 10px
	.expense-form input, .expense-form select, .expense-form textarea
		padding-left 10px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		float left
		height: 40px;
	.expense-form
		input
			padding-left 10px
			
		input[name="Name"]
			width 100%
		input[name="Cost"]
			width 67.5%
		select[name="Currency"]
			width 30%
			margin-left 2.5%
		textarea
			width 100%
		button
			color white
			font-size 1.2em
			background-color #009688
			padding 9px 5px
			border none
			width 100%
			border-radius 3px
		.ng-valid.ng-dirty
			border-color #78FA89
	.expense-form  select[name="Category"]
		width 48.75%

	.expense-form  select[name="Subcategory"]
		width 48.75%
		margin-left 2.5%

	.expense-form input[name='Date']
		width 100%

	.filters
		form
			width 100%
			border solid 1px #ddd
			padding 10px
			height 60px
		button
			padding 9px 30px
			background-color rgb(0, 150, 136)
			color #FFF
			border none
			border-radius 3px
			margin-left 10px
			margin-top 1px
			font-weight 700

	.filters form select, .filters form input
		padding 10px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		float left
		margin-left 10px
		width 23%
	table
		width 100%
		td, th
			text-align center
			border 1px solid #ddd
			padding 10px
			vertical-align middle
			font-size 14px
			
		th
			background #f2f2f2
			font-weight normal
	button
		margin-right 10px
		&:last-child
			margin-right 0
	i, a
		cursor pointer
	select
		padding 10px
		border-radius 5px
	.dropdown-menu
		padding 10px
	#main
		overflow auto
		height 600px
	table
		&.fixed
			table-layout fixed
	.table-edit,
	.table-expense,
	.table-cost,
	.table-carrency,
	.table-category,
	.table-sub,
	.table-addBy
		width 100px
	.table-description
		width 70px
