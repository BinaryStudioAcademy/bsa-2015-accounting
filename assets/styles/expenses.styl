#expenses-view
	margin-top 50px
	#rightBlock
		position fixed
		right 10px
		width 21%
	#leftBlock
		width 71%
		float left
		margin-left 3%
		height

	.btnAdd
		color white
		font-size 1.2em
		background-color #009688
		padding 9px 5px
		border none
		width 100%
		border-radius 3px
	.exchange
		text-align center
		color #222222
		padding 12px 10px
	.exchange, .expense-form
		width 100%
		border solid 1px #ddd
		padding 10px
		margin-bottom 5px
	.expense-form input, .expense-form select, .expense-form textarea
		padding-left 10px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		float left
		height: 40px;
	.expense-form
		input
			padding-left 10px

		input[name="Name"]
			width 100%
		input[name="Cost"]
			width 67.5%
		select[name="Currency"]
			width 30%
			margin-left 2.5%
		textarea
			width 100%
		button
			color white
			font-size 1.2em
			background-color #009688
			padding 9px 5px
			border none
			width 100%
			border-radius 3px
		#form-subcategory-left
			display inline-flex
			
	.expense-form  select[name="Category"]
		width 48.75%

	.expense-form  select[name="Subcategory"]
		width 48.75%
		margin-left 2.5%

	.expense-form input[name='Date']
		width 100%
		
	.expense-form #personal-container
		height 40px
		margin-top 200px
		border 1px solid #ddd
		border-radius 3px
		margin-bottom 9px
	.expense-form input[name='Personal']
		margin-left 10px
		height 15px
		margin-top 12px
	.expense-form #personal-label
		display inline-block
		margin-left 5px
		padding-top 9px

	.filters
		form
			width 100%
			border solid 1px #ddd
			padding 10px
			height 100px
			text-align center
			margin-bottom 5px
		select
			height 33px !important
		a
			width 23%
			i
				margin-left 10px

	.filters form select, .filters form input
		padding 5px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		margin-left 10px
		width 23%
	table
		width 100%
		&.fixed
			table-layout fixed
	button
		&:last-child
			margin-right 0
	i, a
		cursor pointer
	select
		padding 10px
		border-radius 5px
	.dropdown-menu
		padding 10px
	#main
		overflow auto
		height 400px
	table
		&.fixed
			table-layout fixed
		#delete-button
			margin-left 7px
		th
			font-weight 600
	.table-edit,
	.table-expense,
	.table-cost,
	.table-carrency,
	.table-category,
	.table-sub,
	.table-addBy
		width 100px
	.table-description
		width 70px
	select
		height 36px
	.money-left
		margin-bottom 10px
