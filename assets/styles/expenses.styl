#expenses-view
	margin-top 5px
	#rightBlock
		position fixed
		right 10px
		width 21%
	#leftBlock
		width 74%
		float left
		height

	.btnAdd
		color white
		font-size 1.2em
		background-color #009688
		padding 9px 5px
		border none
		width 100%
		border-radius 3px
		margin 0 !important
	.exchange
		text-align center
		color #222222
		b
			display inline-block
		span
			display inline-block
	.exchange, .expense-form
		width 100%
		border solid 1px #ddd
		padding 10px
		margin-bottom 5px
	.expense-form input, .expense-form select, .expense-form textarea
		padding-left 10px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		float left
		height: 40px;
	.expense-form
		input
			padding-left 10px
			.ng-invalid.ng-dirty
				border-color #FA787E
			.ng-valid.ng-dirty
				border-color #78FA89

		input[name="Name"]
			width 100%
		input[name="Cost"]
			width 67.5%
		select[name="Currency"]
			width 30%
			margin-left 2.5%
		textarea
			width 100%
		input.ng-invalid.ng-touched
			border-color #f44336
		button
			color white
			font-size 1.2em
			background-color #009688
			padding 9px 5px
			border none
			width 100%
			border-radius 3px
			
	.expense-form  select[name="Category"]
		width 48.75%

	.expense-form  select[name="Subcategory"]
		width 48.75%
		margin-left 2.5%

	.expense-form input[name='Date']
		width 100%
		
	.expense-form #personal-container
		height 40px
		margin-top 200px
		border 1px solid #ddd
		border-radius 3px
		margin-bottom 9px
	.expense-form input[name='Personal']
		margin-left 10px
		height 15px
		margin-top 12px
	.expense-form #personal-label
		display inline-block
		margin-left 5px
		padding-top 9px

	.filters
		form
			width 100%
			border solid 1px #ddd
			padding 10px
			height 100px
			text-align center
			margin-bottom 5px

		button
			padding 9px 30px
			background-color rgb(0, 150, 136)
			color #FFF
			border none
			border-radius 3px
			margin-left 10px
			margin-top 1px
			font-weight 700
			text-align center
			margin-bottom 5px
		select
			height 33px !important
		#excel-button
			width 23%
			i
				margin-left 10px

	.filters form select, .filters form input
		padding 5px
		font-size 1em
		border solid 1px #ddd
		border-radius 3px
		margin-bottom 10px
		background-color white
		color #A9A9A9
		margin-left 10px
		width 23%
	table
		width 100%
		td, th
			text-align center
			border 1px solid #ddd
			padding 3px
			vertical-align middle
			font-size 14px

		th
			background #f2f2f2
			font-weight 700
			span
				cursor pointer
			.currency-group
				margin-bottom 2px
				.btn
					font-size 10px !important
					padding 0px 8px 0px 8px
					margin 0px !important
				.btn-primary
					background-color #fff !important
					color #337ab7 !important
					border-color #ddd !important
				.active
					color #fff !important
					background-color #286090 !important
					border-color #204d74 !important
	button
		&:last-child
			margin-right 0
	i, a
		cursor pointer
	select
		padding 10px
		border-radius 5px
	.dropdown-menu
		padding 10px
	#main
		overflow auto
		height 420px
	
	.table-date,
	.table-expense,
	.table-cost,
	.table-carrency,
	.table-category,
	.table-sub,
	.table-addBy
		width 100px
	.table-description
		width 86px
	.table-description-header
		width 100px
	.table-date-header
		width 70px
	.table-toggle
		width 30px
	#header-sub
		width 101px
	select
		height 36px
	.btn
		margin-left: 4px;
	.fa-info
		padding 0 8px
	.buttons, .form-inline
		display inline-block
	.date-hilight
		font-weight bold
		background #EAE9FF
	.fa-th, .fa-list 
		border none 
		padding 4px
		border-radius 3px;
		
	.money-left
		margin-bottom 10px
	#form-subcategory-left
		display inline-flex
	
	#responsive-btn
		display none
		width 100%
		margin 0px !important
		margin-bottom 5px !important
		
	.showBlock
		display initial !important
	
	@media screen and (max-width: 1235px)
		#leftBlock
			width 78%
		#rightBlock
			display initial
	
	@media screen and (max-width: 1024px)
		#leftBlock
			width 100%
		#rightBlock
			position initial
			width 100%
			display none
		#responsive-btn
			display initial
		.exchange
			padding 5px
		.expense-form
			padding 5px
			input, select, textarea
				margin-bottom 5px
			#personal-container
				margin-top 180px
				margin-bottom 5px
			button
				padding 5px 5px
		.filters
			#excel-button
				width 34%
				
	@media screen and (max-width: 550px)
		.filters
			form
				padding 5px
				height 90px
				input
					padding 5px
					margin-left 5px
	
	@media screen and (max-width: 700px)
		.responsive-hide
			display none
		#main
			height initial
	@media screen and (max-width: 500px)
		table
			th, td
				font-size 13px
				padding 0px
		#leftBlock
			.filters
				display none
		.currency-group
				.btn
					padding 0px 2px 0px 2px !important
